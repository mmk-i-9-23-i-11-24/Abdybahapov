@startuml
actor Пользователь
actor "Сотрудник банка" as Employee
rectangle "Онлайн-банкинг" {
    Пользователь -> (Просмотр баланса)
    Пользователь -> (Перевод средств)
    Пользователь -> (Пополнение счёта)
    Пользователь -> (Закрытие счёта)
    Пользователь -> (Установка лимитов)
Employee -> (Поддержка клиентов)
    Employee -> (Обработка запросов на закрытие счёта)
}

(Просмотр баланса)  ..> (Показать баланс)
(Перевод средств) ..> (Выбор получателя)
(Перевод средств) ..> (Указать сумму)
(Перевод средств) ..> (Подтверждение перевода)
(Пополнение счёта) ..> (Выбор способа пополнения)
(Пополнение счёта) --> (Указать сумму)

(Пополнение счёта) ..> (Подтверждение пополнения)
(Закрытие счёта) --> (Подтверждение закрытия)
(Установка лимитов) --> (Выбор типа лимита)
(Установка лимитов) --> (Указать сумму)
(Установка лимитов) --> (Подтверждение установки)
@enduml
